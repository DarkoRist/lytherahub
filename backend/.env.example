# ===========================================
# LytheraHub AI â€” Environment Variables
# ===========================================
# Copy this to .env and fill in your values.
# For demo mode, no external keys are needed.

# App
APP_NAME=LytheraHub AI
DEBUG=true
DEMO_MODE=true
SECRET_KEY=change-me-to-a-random-string
ENVIRONMENT=development

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite+aiosqlite:///./lytherahub.db
# DATABASE_URL=postgresql+asyncpg://lytherahub:password@localhost:5432/lytherahub

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=change-me-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth 2.0
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=

# Slack
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# n8n
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
